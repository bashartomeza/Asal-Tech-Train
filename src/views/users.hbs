<!-- src/views/users.hbs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>All Users</title>
  <style>
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background-color: #f7f9fc;
      padding: 40px;
      color: #333;
    }
    h1 {
      text-align: center;
      color: #2c3e50;
      margin-bottom: 30px;
    }
    table {
      width: 100%;
      max-width: 900px;
      margin: 0 auto;
      border-collapse: collapse;
      box-shadow: 0 4px 8px rgba(0,0,0,0.1);
      background-color: #fff;
      border-radius: 8px;
      overflow: hidden;
    }
    th, td {
      padding: 14px 16px;
      text-align: left;
    }
    th {
      background-color: #3498db;
      color: white;
      font-weight: 600;
    }
    tr:nth-child(even) {
      background-color: #f2f7fb;
    }
    tr:hover {
      background-color: #ecf5fe;
    }
    td {
      border-bottom: 1px solid #ddd;
    }
    .empty {
      text-align: center;
      font-style: italic;
      color: #7f8c8d;
    }
  </style>
</head>
<body>
  <h1>All Users</h1>
  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Email</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      {{#if users.length}}
        {{#each users}}
          <tr>
            <td>{{this.id}}</td>
            <td>{{this.name}}</td>
            <td>{{this.email}}</td>
            <td><a href="/auth/profile/{{this.id}}">View Profile</a></td>
          </tr>
        {{/each}}
      {{else}}
        <tr>
          <td colspan="4" class="empty">No users found.</td>
        </tr>
      {{/if}}
    </tbody>
  </table>
</body>
</html>